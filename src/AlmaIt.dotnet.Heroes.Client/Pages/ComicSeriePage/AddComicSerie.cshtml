@using AlmaIt.dotnet.Heroes.Shared.Models
@page "/addcomicserie"  
@inject HttpClient Http  
@inject Microsoft.AspNetCore.Blazor.Services.IUriHelper UriHelper  
  
<h1>Create</h1>  
<h3>Comic Book Serie</h3>  
<hr />  
<div class="row">  
    <div class="col-md-4">  
        <form>  
            <div class="form-group">  
                <label for="Name" class="control-label">Name</label>  
                <input for="Name" class="form-control" bind="@comicSerie.Name" />  
            </div>   
            <div class="form-group">  
                <button type="submit" class="btn btn-default" onclick="@(async () => await CreateComicSerie())">Save</button>  
                <button class="btn" onclick="@cancel">Cancel</button>  
            </div>  
        </form>  
    </div>  
</div>  
  
@functions {  
    ComicSeries comicSerie = new ComicSeries();  

    protected async Task CreateComicSerie()  
    {  
        await Http.SendJsonAsync(HttpMethod.Post, "/api/ComicSerie", comicSerie);  
        UriHelper.NavigateTo("/AllComicBooks");  
    } 

    void cancel()  
    {  
        UriHelper.NavigateTo("/AllComicBooks");  
    }  
}